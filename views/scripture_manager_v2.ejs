<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Category manager</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">category-manager</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <table id="tblresult" class="table table-bordered table-hover dataTable dtr-inline" cellspacing="0"
                width="100%">
                <thead>
                    <tr>
                        <th>_id</th>
                        <th></th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Url key</th>
                        <th>Status</th>
                        <th>Method</th>
                    </tr>
                </thead>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <div class="row">
                <div class="col-2">
                    <button type="button" class="btn btn-sm btn-block btn-success" id="btnAdd" data-toggle="modal"><i
                            class="fas fa-plus"></i>&nbsp
                        Add new category</button>
                </div>
                <!-- <div class="col-2">
                    <button type="button" class="btn btn-sm btn-block btn-danger" id="btnYoutube" data-toggle="modal"><i
                            class="fab fa-youtube"></i>&nbsp
                        Add youtube link</button>
                </div> -->
            </div>

        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<!-- the modal create -->
<div class="modal fade" id="createModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add new category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <a id="c_link" href="/public/images/default-image-620x600.jpg" target="_blank">
                            <img id="c_blah" src="/public/images/default-image-620x600.jpg" alt="your image"
                                style="width: 100%" />
                        </a>
                    </div>
                    <div class="col-md-6">
                        <form id="formPost" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <legend>input text</legend>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Title</label>
                                    <input type="text" class="form-control" id="c_title" name="title"
                                        placeholder="Enter title">
                                </div>
                                <div class="form-group">
                                    <label>Select</label>
                                    <select class="form-control" name="status" id="c_status">
                                        <option value="false">Hidden</option>
                                        <option value="true" selected>Not hidden</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <div class="custom-file">
                                        <label for="exampleInputFile">File input</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input imgInp" id="c_imgInp"
                                                name="single_image">
                                            <label class="custom-file-label" for="customFile">File input</label>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                            </fieldset>
                        </form>
                        <!-- <form id="formPutUpload" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputFile">File input</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input imgInp" id="imgInp">
                                        <label class="custom-file-label" for="customFile">File input</label>
                                    </div>
                                </div>
                            </div>
                        </form> -->
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" form="formPost" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="YoutubeModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add youtube link</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="formYouTube" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="c_youtube" name="url_youtube"
                                    placeholder="Enter link">
                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" form="formYouTube" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->


<!-- the modal update -->
<div class="modal fade" id="updateModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <a id="u_link" href="/public/images/default-image-620x600.jpg" target="_blank">
                            <img id="u_blah" src="/public/images/default-image-620x600.jpg" alt="your image"
                                style="width: 100%" />
                        </a>
                    </div>
                    <div class="col-md-6">
                        <form id="formPut" method="put" enctype="multipart/form-data">
                            <fieldset>
                                <legend>input text</legend>
                                <input type="hidden" id="_id" name="_id">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Title</label>
                                    <input type="text" class="form-control" id="u_title" name="title"
                                        placeholder="Enter title" style="text-transform:uppercase">
                                </div>
                                <div class="form-group">
                                    <label>Select</label>
                                    <select class="form-control" name="status" id="u_status">
                                        <option value="false">Hidden</option>
                                        <option value="true">Not hidden</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <div class="custom-file">
                                        <label for="exampleInputFile">File input</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input imgInp" id="u_imgInp"
                                                name="single_image">
                                            <label class="custom-file-label" for="customFile">File input</label>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" form="formPut" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<!-- The Modal confirm-->
<div class="modal fade" id="deletemodal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete scripture</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <h5></h5>
                    <form method="post" class="form-horizontal" id="frmDelete">
                        <input type="hidden" id="r_id">
                    </form>
                    <a id="d_link" href="/public/images/default-image-620x600.jpg" target="_blank">
                        <img id="d_blah" src="/public/images/default-image-620x600.jpg" alt="your image"
                            style="width: 100%" />
                    </a>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" form="frmDelete" id="btnSubmit">Delete</button>
            </div>

        </div>
    </div>
</div>
